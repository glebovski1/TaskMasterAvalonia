<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="TaskMaster.AvaloniaUI.Views.NewEmployeeView">

  <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
    <StackPanel Orientation="Horizontal" Margin="5" >
      <TextBlock Text="First name:" Padding="5" Margin="5"/>
      <TextBox Text="{Binding FirstName}"  Padding="5" Margin="5"/>
    </StackPanel>
    <StackPanel Orientation="Horizontal"  Margin="5">
      <TextBlock Text="Last name:"  Padding="5" Margin="5"/>
      <TextBox Text="{Binding LastName}"  Padding="5" Margin="5"/>
    </StackPanel>
    <StackPanel Orientation="Horizontal"  Margin="5" >
      <TextBlock Text="Position:"  Padding="5" Margin="5"/>
      <TextBox Text="{Binding Position}"  Padding="5" Margin="5"/>
    </StackPanel>
    <Button Content="Add"   Padding="5" Margin="5" Command="{Binding AddEmployeeCommand}" HorizontalAlignment="Center" Background="Coral"/>
  </StackPanel>
</UserControl>
